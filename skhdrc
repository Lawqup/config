# -*- conf -*-
alt - e : /Users/lawqup/config/scripts/macos-run-emacsclient
alt - w : /Applications/Firefox.app/Contents/MacOS/firefox
alt - return : /Applications/iTerm.app/Contents/MacOS/iTerm2
alt - q : /opt/homebrew/bin/qalculate-gtk
alt - u : opt/homebrew/Caskroom/flameshot/12.1.0/flameshot.app/Contents/MacOS/flameshot gui

# moves focus between windows in the current focused display
alt - k : yabai -m window --focus $(yabai -m query --spaces --space | jq -r 'if .type == "bsp" then "next" else "stack.next" end') || yabai -m window --focus $(yabai -m query --spaces --space | jq -r 'if .type == "bsp" then "first" else "stack.first" end')

alt - up : yabai -m window --focus $(yabai -m query --spaces --space | jq -r 'if .type == "bsp" then "next" else "stack.next" end') || yabai -m window --focus $(yabai -m query --spaces --space | jq -r 'if .type == "bsp" then "first" else "stack.first" end')


alt - j : yabai -m window --focus $(yabai -m query --spaces --space | jq -r 'if .type == "bsp" then "prev" else "stack.prev" end') || yabai -m window --focus $(yabai -m query --spaces --space | jq -r 'if .type == "bsp" then "last" else "stack.last" end')

alt - down : yabai -m window --focus $(yabai -m query --spaces --space | jq -r 'if .type == "bsp" then "prev" else "stack.prev" end') || yabai -m window --focus $(yabai -m query --spaces --space | jq -r 'if .type == "bsp" then "last" else "stack.last" end')



alt + ctrl - k  :  yabai -m window --focus north || yabai -m display --focus north
alt + ctrl - up:  yabai -m window --focus north || yabai -m display --focus north

alt + ctrl - j  :  yabai -m window --focus south || yabai -m display --focus south
alt + ctrl - down :  yabai -m window --focus south || yabai -m display --focus south

